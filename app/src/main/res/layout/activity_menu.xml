<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        android:background="@drawable/bg"
                        android:alpha="0.9"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        android:background="@color/grey_600"
                        android:alpha="0.4"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16sdp">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/_25sdp"
                                    android:layout_marginLeft="@dimen/_25sdp"
                                    android:background="@color/white"
                                    app:cardBackgroundColor="@color/white"
                                    android:layout_marginTop="@dimen/_14sdp"
                                    app:cardElevation="@dimen/_8sdp"
                                    app:cardMaxElevation="@dimen/_10sdp"
                                    app:cardCornerRadius="@dimen/_9sdp"
                                    app:cardUseCompatPadding="true"
                                    android:padding="@dimen/_10sdp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:paddingRight="@dimen/_5sdp"
                                        android:paddingTop="@dimen/_20sdp"
                                        android:paddingBottom="@dimen/_20sdp">
                                        <TextView
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Selamat Datang"
                                            android:textStyle="bold"
                                            android:textSize="@dimen/_20sdp"
                                            android:layout_gravity="center"
                                            android:gravity="center"/>
                                        <TextView
                                            android:id="@+id/nama"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="ENVY ARGO"
                                            android:textStyle="bold"
                                            android:textSize="@dimen/_25sdp"
                                            android:layout_gravity="center"
                                            android:textColor="@color/green_600"
                                            android:gravity="center"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/grey_200"
                                    android:layout_marginBottom="@dimen/_4sdp"/>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/i_profile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="@dimen/_150sdp">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:backgroundTintMode="multiply"
                                            android:layout_width="@dimen/_60sdp"
                                            android:layout_height="@dimen/_60sdp"
                                            android:background="@drawable/school"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/_25sdp"
                                    android:layout_marginLeft="@dimen/_25sdp"
                                    android:background="@color/white"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardElevation="@dimen/_8sdp"
                                    app:cardMaxElevation="@dimen/_10sdp"
                                    app:cardCornerRadius="@dimen/_9sdp"
                                    app:cardUseCompatPadding="true"
                                    android:padding="@dimen/_10sdp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:paddingRight="@dimen/_5sdp"
                                        android:paddingTop="@dimen/_10sdp"
                                        android:paddingBottom="@dimen/_10sdp">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Pilih kategori dulu yuk!"
                                            android:textStyle="bold"
                                            android:textSize="@dimen/_15sdp"
                                            android:layout_gravity="center"
                                            android:textColor="@color/green_600"
                                            android:gravity="center"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <ImageView
                                android:id="@+id/down1"
                                android:layout_width="39dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:background="@drawable/down" />
                            <ImageView
                                android:id="@+id/down2"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@drawable/down"
                                android:layout_marginRight="@dimen/_8sdp"/>
                            <ImageView
                                android:id="@+id/down3"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:background="@drawable/down"
                                android:layout_marginRight="@dimen/_8sdp"/>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_15sdp"
                            android:clipToPadding="false"
                            android:visibility="visible"
                            android:id="@+id/rc_home"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="@dimen/_550sdp">
                    <TextView
                        android:id="@+id/coba"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_600"
                        android:textSize="@dimen/_20sdp"
                        android:text="Belum ada data"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>